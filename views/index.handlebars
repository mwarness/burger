<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			{{!-- {{<img src="../public/assets/pictures/terrifiedBurger.jpeg" />}} --}}
			<h1> Eat the Beef! </h1>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="row">
				{{#each burgerData}}
				{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre>{{this.id}}. {{this.burgerNames}}
					</pre>
					<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
			
					<form class="devour-form button-size">
						<input class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Eat Me!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			{{#each burgerData}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burgerNames}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burgerNames" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Make it!</button>
			</form>
			<p>What kind of burger is calling at your soul? Enter it and then click "Make it!".</p>
		</div>
	</div>
</div>